<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerFormController">
   <children>
      <TableView fx:id="customerTable" layoutX="14.0" layoutY="59.0" prefHeight="200.0" prefWidth="568.0">
        <columns>
          <TableColumn fx:id="cIDCol" prefWidth="33.0" text="ID" />
          <TableColumn fx:id="cNameCol" prefWidth="103.0" text="Name" />
            <TableColumn fx:id="cAddressCol" prefWidth="147.0" text="Address" />
            <TableColumn fx:id="cZipCol" prefWidth="59.0" text="Zip Code" />
            <TableColumn fx:id="cStateCol" prefWidth="95.0" text="State/Province" />
            <TableColumn fx:id="cPhoneCol" prefWidth="130.0" text="Phone #" />
        </columns>
      </TableView>
      <Label layoutX="14.0" layoutY="14.0" text="Customers">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Button fx:id="modButton" layoutX="321.0" layoutY="318.0" mnemonicParsing="false" onAction="#onModifyCustomer" text="Modify Customer" />
      <Button fx:id="delButton" layoutX="449.0" layoutY="318.0" mnemonicParsing="false" onAction="#onDeleteCustomer" text="Delete Customer" />
      <Button fx:id="addButton" layoutX="207.0" layoutY="318.0" mnemonicParsing="false" onAction="#onAddCustomer" text="Add Customer" />
      <Button fx:id="backButton" layoutX="513.0" layoutY="361.0" mnemonicParsing="false" onAction="#onBack" text="Back" />
   </children>
</AnchorPane>
